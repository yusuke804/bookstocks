<h1 class="text-center mt-3 mb-3">ユーザー一覧</h1>

<div class="row mt-3">
  <div class="col-sm-10 offset-sm-1">
    <table class="table table-bordered tables-hover-rows table-striped">
      <thead>
        <tr>
          <th scope="col">id</th>
          <th scope="col">user-name</th>
          <th scope="col">show user</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <th scope="row"><%= user.id %></th>
            <td><%= user.name %></td>
            <td><%= link_to "user詳細", user, class: "btn btn-primary btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
  