<ul class="list-unstyled">
  <% @posts.each do |post| %>
    <div class="row mt-4">
      <div class="card text-white bg-info col-sm-3">
        <img class="card-img-top mt-4" src=<%= post.user.image %> alt="user-image">
          <h4 class="card-title"><%= post.user.name %></h4>
      </div>  
      <ul class="list-group col-sm-9"> 
        <li class="list-group-item media mb-3 text-center">     
          <div>  
            <h3><%= post.introduce_content %></h3>
          </div>
          <div>
            <p><%= post.author_name %> <%= post.novel_title %></p>
          </div>
          <%= render "layouts/show_button", post: post %>
        </li>
      </ul>
    </div>
  <% end %>
  <div class="offset-sm-6">
    <%= paginate @posts %>
  </div>
</ul>

